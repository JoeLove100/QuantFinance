<Window x:Class="ChartingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Quant Finance" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <oxy:PlotView Grid.Row="0" x:Name="DailyPnl" Model="{Binding PlotModelDaily}" ></oxy:PlotView>
        <oxy:PlotView Grid.Row="1" x:Name="CumulativePnl" Model="{Binding PlotModelCumulative}" ></oxy:PlotView>
    </Grid>
</Window>
